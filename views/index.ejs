<h1>Pagina inicial </h1>
<br>
<div class="row mb-3">
    <div class="col-md-10 offset-md-1">
        <form  action="" >
            <div class="input-group">
                <input name="buscar" type="text" class="form-control form-control-lg" placeholder="Buscar por departamento">
                <div class="input-group-append">
                    <button type="submit" class="btn btn-lg btn-default">
                        <i class="fa fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </div>
  </div>
  
  <table class="table table-striped projects col-md-10 offset-md-1 mt-4 "  >
    <thead >
        <tr>
            <th style="width: 1%">
                #
            </th>
            <th style="width: 20%">
  
  Nombre         </th>
            <th style="width: 20%">
                Fecha de contratacion
            </th>
            <th style="width: 20%">
                salario
            </th>
            <th style="width: 20%">
               horas trabajadas
            </th>
            <th style="width: 20%">
                departamento
            </th>
  
        </tr>
    </thead>
    <tbody>
      <% resultados.forEach((empleados)=>{%>
        <tr>
            <td>
              <%=empleados.id%>
            </td>
            <td>
              <%=empleados.nombre%>
  
            </td>
            <td>
              <% const fechacontratacion = new Date(empleados.fechacontratacion); %>
              <%= fechacontratacion.toLocaleDateString('es-ES', {day: 'numeric',month: 'numeric', year: 'numeric',   }) %>
              
  
             </td>
             <td>
              <%=empleados.salario%>
  
             </td>
             <td>
              <%=empleados.horastrabajo%>
  
             </td>
             <td>
              <%=empleados.departamento%>
  
             </td>
  
  
        </tr>
  
  
  <%})%>
    </tbody>
  </table>