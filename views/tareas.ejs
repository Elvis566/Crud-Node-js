<div class="card card-primary col-md-10 offset-md-1">
    <h1 class="card-title">Designar tareas a los empleados</h1>
    <form method="POST" action="/saveTareas" >

      <div class="card-body">
        <div class="form-group">
          <label for="exampleInputEmail1">Nombre de tarea</label>
          <input type="text" name="nombreTarea" required class="form-control" id="exampleInputEmail1" >
        </div>

          <div class="form-group">
            <label for="exampleInputEmail3">Horas de tarea</label>
            <input type="number" name="horas" required class="form-control" id="exampleInputEmail3"  title="Ingrese un número decimal válido">
          </div>


        <label for="inputStatus">Empleado</label>
        <select name="id_empleado" required id="inputStatus" class="form-control custom-select">

        <%resultados.forEach((empleados)=>{%>
            <option value="<%=empleados.id%>"><%=empleados.nombre%></option>
        <%})%>
        </select>

        <div class="card-footer">
         <button type="submit" class="btn btn-primary">Registrar</button>
        </div>
      </div>
    </form>

</div>
